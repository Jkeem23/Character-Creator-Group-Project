<h1>Character: <%= @character.name %></h1>

<body>
    <div id="inner">
        <p>
            <strong>Character Name:</strong>
            <%= @character.name %>
        </p>
        <hr>
        <p>
            <strong>Race:</strong>
            <%= @character.race %>
        </p>
        <p>
            <strong>roleType:</strong>
            <%= @character.roleType %>
        </p>
        <p>
            <strong>backstory:</strong>
            <%= @character.backstory %>
        </p>
        <p>
            <strong>strength:</strong>
            <%= @character.strength %>
        </p>
        <p>
            <strong>perception:</strong>
            <%= @character.perception %>
        </p>
        <p>
            <strong>endurance:</strong>
            <%= @character.endurance %>
        </p>
        <p>
            <strong>charisma:</strong>
            <%= @character.charisma %>
        </p>
        <p>
            <strong>intelligence:</strong>
            <%= @character.intelligence %>
        </p>
        <p>
            <strong>agility:</strong>
            <%= @character.agility %>
        </p>
        <p>
            <strong>luck:</strong>
            <%= @character.luck %>
</p>

</div>
</br>
<div id = "inner">
        <p>
        <strong><%= @character.name %>'s Gathering Classes</strong>
        </p>
        <% @character.gatherers.each do |gatherer| %>
        <p>
            <strong>Class:</strong>
            <%= gatherer.gatherType %><br>

            <strong>Level:</strong>
            <%= gatherer.gatherLevel %>
        </p>
        
        <% end %>
        <hr>
        <p>
        <strong>Add a gatherer:</strong>
        </p>
        <%= form_for([@character, @character.gatherers.build]) do |f| %>
          <p>
            <%= f.label :Class %>
            <%= f.text_field :gatherType %><br>
            
            <%= f.label :Level %>
            <%= f.number_field :gatherLevel %>
          </p>
          <p>
            <%= f.submit %>
          </p>
        <% end %>
        </div>
        
        <br>
        
        <div id = "inner">
            <%= link_to 'Character List', characters_path %>
    </div>
</body>
